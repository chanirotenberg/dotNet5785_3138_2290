<Window x:Class="PL.Volunteer.ClosedCallsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="קריאות סגורות" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- סינון ומיון -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 0 10" Grid.Row="0" FlowDirection="RightToLeft">
            <TextBlock Text="סוג קריאה:" Margin="0 0 10 0" VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding CallTypes}"
                      SelectedItem="{Binding SelectedCallType, Mode=TwoWay}"
                      Width="150" Margin="0 0 20 0"/>

            <TextBlock Text="מיון לפי:" Margin="0 0 10 0" VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding SortFields}"
                      SelectedItem="{Binding SortField, Mode=TwoWay}"
                      Width="150"/>
        </StackPanel>

        <!-- טבלת קריאות סגורות -->
        <DataGrid ItemsSource="{Binding ClosedCalls}" AutoGenerateColumns="False" IsReadOnly="True" Grid.Row="1" FlowDirection="RightToLeft">
            <DataGrid.Columns>
                <DataGridTextColumn Header="מספר" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="סוג קריאה" Binding="{Binding CallType}" Width="100"/>
                <DataGridTextColumn Header="כתובת" Binding="{Binding FullAddress}" Width="*"/>
                <DataGridTextColumn Header="שעת פתיחה" Binding="{Binding OpeningTime, StringFormat=HH:mm dd/MM/yyyy}" Width="140"/>
                <DataGridTextColumn Header="שעת כניסה" Binding="{Binding EntryTime, StringFormat=HH:mm dd/MM/yyyy}" Width="140"/>
                <DataGridTextColumn Header="שעת סיום" Binding="{Binding EndTime, StringFormat=HH:mm dd/MM/yyyy}" Width="140"/>
                <DataGridTextColumn Header="סוג סיום" Binding="{Binding EndType}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
