<Window x:Class="PL.Volunteer.ClosedCallsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="קריאות שטופלו" Height="500" Width="850"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Filters -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- סינון ומיון -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 0 10">
            <TextBlock Text="סוג קריאה:" VerticalAlignment="Center" Margin="0 0 10 0"/>
            <ComboBox ItemsSource="{Binding CallTypes}"
                      SelectedItem="{Binding SelectedCallType, Mode=TwoWay}"
                      Width="150" Margin="0 0 20 0"/>

            <TextBlock Text="מיון לפי:" VerticalAlignment="Center" Margin="0 0 10 0"/>
            <ComboBox ItemsSource="{Binding CallSortFields}"
                      SelectedItem="{Binding SortField, Mode=TwoWay}"
                      Width="150"/>
        </StackPanel>

        <!-- טבלת קריאות סגורות -->
        <DataGrid ItemsSource="{Binding ClosedCalls}" AutoGenerateColumns="False"
                  IsReadOnly="True" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                <DataGridTextColumn Header="סוג קריאה" Binding="{Binding CallType}" />
                <DataGridTextColumn Header="כתובת" Binding="{Binding Address}" />
                <DataGridTextColumn Header="שעת פתיחה" Binding="{Binding OpeningTime}" />
                <DataGridTextColumn Header="שעת כניסה" Binding="{Binding EntryTime}" />
                <DataGridTextColumn Header="שעת סיום" Binding="{Binding EndTime}" />
                <DataGridTextColumn Header="סוג סיום" Binding="{Binding EndType}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
