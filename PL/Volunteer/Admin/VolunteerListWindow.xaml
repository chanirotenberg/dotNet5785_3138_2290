<Window x:Class="PL.Volunteer.Admin.VolunteerListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="VolunteerListWindow"
        Height="640" Width="800"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <!-- Window Resources: Styles for DataGrid cells, rows, and the delete button -->
    <Window.Resources>
        <!-- Style for centering content in DataGrid cells -->
        <Style TargetType="DataGridCell">
            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="10"/>
        </Style>

        <!-- Custom round delete button with trash emoji -->
        <Style x:Key="RoundDeleteButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#FF66B2FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Content" Value="🗑"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Alternating row style for DataGrid -->
        <Style TargetType="DataGridRow">
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#F2F2F2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Main layout grid -->
    <Grid>
        <!-- Grid structure: 2 columns, 3 rows -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="769*"/>
            <ColumnDefinition Width="31*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top row: Filter selection with ComboBox -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0"/>
            <!-- ComboBox for filtering by call type -->
            <ComboBox Grid.Column="1"
                      SelectedValue="{Binding Path=calls, Mode=TwoWay}"
                      ItemsSource="{Binding Source={StaticResource CallCollection}}"
                      SelectionChanged="CallTypeComboBox_SelectionChanged"/>
        </Grid>

        <!-- Middle row: DataGrid to display the volunteer list -->
        <DataGrid Grid.Row="1"
                  Margin="5"
                  IsReadOnly="True"
                  AutoGenerateColumns="True"
                  HeadersVisibility="Column"
                  GridLinesVisibility="None"
                  BorderThickness="0"
                  AlternationCount="2"
                  RowHeight="40"
                  ItemsSource="{Binding VolunteerList}"
                  SelectedItem="{Binding SelectedVolunteer}"
                  MouseDoubleClick="lsvVolunteerList_MouseDoubleClick">
            <DataGrid.Columns>
                <!-- Column for delete button per row -->
                <DataGridTemplateColumn Header=" " Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource RoundDeleteButtonStyle}"
                                    Click="DeleteButton_Click"
                                    CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Bottom row: Add volunteer button -->
        <Button Content="Add"
                Grid.Row="2"
                HorizontalAlignment="Center"
                Height="50"
                Width="100"
                Click="AddVolunteer_Click"/>
    </Grid>
</Window>
