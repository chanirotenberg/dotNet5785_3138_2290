<Application x:Class="PL.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PL"
             xmlns:conv="clr-namespace:PL"
             StartupUri="LoginWindow.xaml">

    <Application.Resources>
        <local:CallCollection x:Key="CallCollection" />
        <local:JobsCollection x:Key="JobsCollectionKey" />
        <local:DistanceCollection x:Key="DistanceCollectionKey" />

        <conv:ConvertUpdateToTrue x:Key="ConvertUpdateToTrueKey"/>
        <conv:CallInProgressToStringConverter x:Key="CallInProgressConverter"/>
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <conv:NotNullToVisibilityConverter x:Key="NotNullToVisibilityConverter"/>
        <conv:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:BoolToAddOrUpdateConverter x:Key="BoolToAddOrUpdateConverter"/>
        <conv:SimulatorButtonTextConverter x:Key="SimulatorButtonTextConverter"/>
    </Application.Resources>
</Application>
