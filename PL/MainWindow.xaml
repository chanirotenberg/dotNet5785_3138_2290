<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Title="מסך ניהול ראשי" Height="600" Width="900" WindowStartupLocation="CenterScreen"
        Loaded="MainWindow_Loaded"
        Closed="MainWindow_Closed">
    <Grid Background="White" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- כותרת -->
        <TextBlock Text="ניהול מערכת" FontSize="28" FontWeight="Bold" Foreground="DarkBlue" HorizontalAlignment="Center" Margin="0,10"/>

        <!-- תוכן ראשי -->
        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- אזור שעון מערכת -->
            <StackPanel Grid.Column="0" Margin="10" VerticalAlignment="Top">
                <!-- תווית שעון המערכת -->
                <TextBlock Text="שעון מערכת:" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,10"/>

                <!-- הצגת השעה הנוכחית -->
                <Label Content="{Binding CurrentTime}" FontSize="18" Background="LightGray" Padding="10" HorizontalContentAlignment="Center"/>

                <!-- כפתורי קידום זמן -->
                <StackPanel Margin="0,20,0,0" Orientation="Vertical" HorizontalAlignment="Center" Width="150">
                    <Button Content="Add One Minute" Click="btnAddOneMinute_Click" Margin="5" Padding="10"/>
                    <Button Content="Add One Hour" Click="btnAddOneHour_Click" Margin="5" Padding="10"/>
                    <Button Content="Add One Day" Click="btnAddOneDay_Click" Margin="5" Padding="10"/>
                    <Button Content="Add One Month" Click="btnAddOneMonth_Click" Margin="5" Padding="10"/>
                    <Button Content="Add One Year" Click="btnAddOneYear_Click" Margin="5" Padding="10"/>
                </StackPanel>
            </StackPanel>

            <!-- קו מפריד אנכי -->
            <Separator Grid.Column="1" Margin="10" HorizontalAlignment="Center" Width="2" Background="Gray"/>

            <!-- אזור משתני תצורה וניהול -->
            <StackPanel Grid.Column="2" Margin="10" VerticalAlignment="Top">
                <!-- אזור משתני תצורה -->
                <TextBlock Text="טווח זמן סיכון:" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,10"/>

                <!-- עריכת משתנה תצורה -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <!-- TextBox לקישור עם TimeSpan -->
                    <TextBox Width="150" Height="30" Background="LightYellow" Margin="0,0,10,0" 
             Text="{Binding RiskRange, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Content="Update Risk Range" Width="120" Height="30" Click="UpdateRiskRange_Click"/>

                    <!-- Button לעדכון RiskRange -->
                </StackPanel>


                <!-- כפתורי ניווט עיקריים -->
                <StackPanel Margin="0,30,0,0" Orientation="Vertical" Width="200" HorizontalAlignment="Left">
                    <!-- כפתור לפתיחת מסך תצוגת המתנדבים -->
                    <Button Content="Handle Volunteer" Margin="5" Padding="10" Click="HandleVolunteer_Click"/>
                    <Button Content="ניהול קריאות" Margin="5" Padding="10"/>
                    <Button Content="Initialize בסיס נתונים" Margin="5" Padding="10" Click="InitializeDB_Click"/>
                    <Button Content="Reset בסיס נתונים" Margin="5" Padding="10" Click="ResetDB_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
