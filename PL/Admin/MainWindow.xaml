<Window x:Class="PL.Admin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Title="Main Management Screen" Height="600" Width="900" WindowStartupLocation="CenterScreen"
        Loaded="MainWindow_Loaded"
        Closed="MainWindow_Closed"
        Background="#f9fbfd">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" HorizontalAlignment="Center">

            <!-- System Clock -->
            <TextBlock Text="{Binding CurrentTime}" FontSize="36" FontWeight="Bold" Foreground="#34495e" HorizontalAlignment="Center" Margin="0,40,0,40"/>

            <!-- Time Controls -->
            <WrapPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                <Button Content="+1 Minute" Click="btnAddOneMinute_Click" Width="100"
        Height="50"
        Background="#c6f4f9"
        BorderBrush="#3b6ea5"
        BorderThickness="4"
        Foreground="#3b6ea5"
        FontWeight="SemiBold"
        FontSize="16"
        Padding="10"
        Margin="15"
        Cursor="Hand"/>
                <Button Content="+1 Hour" Click="btnAddOneHour_Click" Width="100"
        Height="50"
        Background="#c6f4f9"
        BorderBrush="#3b6ea5"
        BorderThickness="4"
        Foreground="#3b6ea5"
        FontWeight="SemiBold"
        FontSize="16"
        Padding="10"
        Margin="15"
        Cursor="Hand"/>
                <Button Content="+1 Day" Click="btnAddOneDay_Click" Width="100"
        Height="50"
        Background="#c6f4f9"
        BorderBrush="#3b6ea5"
        BorderThickness="4"
        Foreground="#3b6ea5"
        FontWeight="SemiBold"
        FontSize="16"
        Padding="10"
        Margin="15"
        Cursor="Hand"/>
                <Button Content="+1 Month" Click="btnAddOneMonth_Click" Width="100"
        Height="50"
        Background="#c6f4f9"
        BorderBrush="#3b6ea5"
        BorderThickness="4"
        Foreground="#3b6ea5"
        FontWeight="SemiBold"
        FontSize="16"
        Padding="10"
        Margin="15"
        Cursor="Hand"/>
                <Button Content="+1 Year" Click="btnAddOneYear_Click" Width="100"
        Height="50"
        Background="#c6f4f9"
        BorderBrush="#3b6ea5"
        BorderThickness="4"
        Foreground="#3b6ea5"
        FontWeight="SemiBold"
        FontSize="16"
        Padding="10"
        Margin="15"
        Cursor="Hand"/>
            </WrapPanel>

            <!-- Risk Range -->
            <StackPanel Margin="0,0,0,20" HorizontalAlignment="Center">
                <TextBlock Text="Risk Range:" FontSize="30" FontWeight="Bold" Foreground="#2c3e50" Margin="50,20,100,20"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox Width="150" Height="30" Text="{Binding RiskRange, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Margin="0,0,10,50"/>
                    <Button Content="Update Risk Range" Click="UpdateRiskRange_Click" Width="160"
        Height="40"
        Background="LightGray"
        BorderBrush="Gray"
        BorderThickness="4"
        Foreground="Gray"
        FontWeight="SemiBold"
        FontSize="16"
        Padding="5"
        Margin="0,0,10,50"
        Cursor="Hand"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Margin="0,0,0,30" HorizontalAlignment="Center">
                <TextBlock Text="Simulator:" FontSize="30" FontWeight="Bold" Foreground="#2c3e50" Margin="50,20,100,20"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox Width="100" Height="30" Text="{Binding Interval, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Margin="0,0,10,10"/>
                    <Button Content="{Binding IsSimulatorRunning, Converter={StaticResource SimulatorButtonTextConverter}}"
                Click="ToggleSimulator_Click"
                Width="160" Height="40"
                Background="LightGray"
                BorderBrush="Gray"
                BorderThickness="4"
                Foreground="Gray"
                FontWeight="SemiBold"
                FontSize="16"
                Padding="5"
                Margin="0,0,10,10"
                Cursor="Hand"/>
                </StackPanel>
            </StackPanel>

            <!-- Management Buttons -->
            <WrapPanel HorizontalAlignment="Center">
                <Button Content="Handle Volunteer" Click="HandleVolunteer_Click" Width="160"
        Height="40"
        Background="#3b6ea5"
        BorderBrush="#3b6ea5"
        BorderThickness="4"
        Foreground="White"
        FontWeight="SemiBold"
        FontSize="16"
        Padding="5"
        Margin="15"
        Cursor="Hand"/>
                <Button Content= "Handle Calls" Click="HandleCall_Click" Width="160"
        Height="40"
        Background="#3b6ea5"
        BorderBrush="#3b6ea5"
        BorderThickness="4"
        Foreground="White"
        FontWeight="SemiBold"
        FontSize="16"
        Padding="5"
        Margin="15"
        Cursor="Hand"/>
                <Button Content="Initialize DB"  Click="InitializeDB_Click" Width="160"
        Height="40"
        Background="#3b6ea5"
        BorderBrush="#3b6ea5"
        BorderThickness="4"
        Foreground="White"
        FontWeight="SemiBold"
        FontSize="16"
        Padding="5"
        Margin="15"
        Cursor="Hand"/>
                <Button Content="Reset DB"  Click="ResetDB_Click" Width="160"
        Height="40"
        Background="#3b6ea5"
        BorderBrush="#3b6ea5"
        BorderThickness="4"
        Foreground="White"
        FontWeight="SemiBold"
        FontSize="16"
        Padding="5"
        Margin="15"
        Cursor="Hand"/>
            </WrapPanel>

        </StackPanel>
    </ScrollViewer>
</Window>
